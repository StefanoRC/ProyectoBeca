---
import MainLayout from "../layouts/mainLayout.astro";
import { games } from "../data/games.js";
---

<MainLayout title="UI KIT">
  <header>
    <h1>NAVBAR</h1>
  </header>
  <main>
    <section>
      <h3>üñ≤Ô∏è Buttons</h3>
      <button class="btn">Primary</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-accent">Accent</button>
    </section>

    <section>
      <h3>üè∑Ô∏è Badges</h3>
      <span class="badge badge-success">Success</span>
      <span class="badge badge-error">Error</span>
      <span class="badge badge-warning">Warning</span>
    </section>

    <section>
      <h3>üì¶ Card</h3>
      <div class="card_container">
        {games.map(game => (
          <div class="card" data-game-id={game.id} data-game-idalt={game.idalt}>
            <div>
              <img src="/assets/img/minecraft-cover.jpg" alt="minecraft-cover" />
              <a class="btn_anchor" href={`/${game.id}`}>
                <button class="btn card_item">Jugar</button>
              </a>
            </div>
            <p class="card_item">Valor: {game.scoreToUnlock} creditos</p>
          </div>
        ))}
        <div class="card">
          <div>
            <img src="/assets/img/minecraft-cover.jpg" alt="minecraft-cover" />
            <a class="btn_anchor" href="#"
              ><button class="btn card_item">Play to unlock</button></a
            >
          </div>
          <p class="card_item">Valor: x Creditos</p>
        </div>
      </div>
    </section>
  </main>
  <aside>
    <h3>üóÇÔ∏è Sidebar</h3>
    <ul>
      <li><a href="/biblioteca">üìö Ver Biblioteca</a></li>
    </ul>
  </aside>
  <footer>
    <nav>
      <ul>
        <li><a href="#home">Home</a></li>
        <li><a href="#about">About</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </nav>
    <p>&copy; 2023 Your Company</p>
  </footer>
  <script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const unlockedGames = JSON.parse(localStorage.getItem("unlockedGames") || "[]");

    document.querySelectorAll(".card").forEach(card => {
      const gameId = card.dataset.gameId;
      const gameIdAlt = card.dataset.gameIdalt;
      if (unlockedGames.includes(gameId)) {
        

        const anchor = card.querySelector("a");
        const button = card.querySelector("button");

        // Cambiar href y texto
        anchor.href = `/${gameIdAlt}`;
        button.textContent = "Detalles del juego";
      }
    });
  });
</script>
</MainLayout>

<style>
  /* SEMANTICS */
  body {
    margin: 0;
    background-color: var(--bg-color);
    color: var(--text);
    display: grid;
    grid-template-columns: 1fr 4fr;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "header header"
      "sidebar main"
      "footer footer";
    height: 100vh;
    font-size: x-large;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: oklch(0.21 0.1209 279.86);
    box-shadow: var(--shadow);
    grid-area: header;
  }

  main {
    grid-area: main;
  }

  aside {
    grid-area: sidebar;
    padding: 1rem;
  }

  footer {
    grid-area: footer;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    background-color: oklch(0.21 0.1209 279.86);
    box-shadow: var(--shadow);
    flex-direction: column;
  }

  section {
    border: 1px solid var(--primary);
    padding: 1rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    margin: 1rem;
    background-color: oklch(0.21 0.1209 279.86);
  }

  

  /* CARDS */

  img {
    max-width: 100%;
    height: auto;
  }

  .card_container {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 1rem;
    justify-content: center;
  }

  .card {
    background: #111;
    border: 1px solid var(--primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    display: grid;
    grid-template-rows: auto auto;
    width: 250px;
    height: auto;
    overflow: hidden;
    justify-items: center;
    align-items: center;
    transform: scale(0.95);
  }

  .card:hover {
    transform: scale(1);
    transition: all 0.2s ease-in-out;
  }

  .card img {
    border-radius: var(--radius) var(--radius) 0 0;
    width: 100%;
    height: auto;
    margin: 0;
  }

  .card_item {
    margin: 5px;
  }

  .card div {
    position: relative;
  }

  .card .btn_anchor {
    position: absolute;
    border: none;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    cursor: pointer;
    left: 50%;
    bottom: -5%;
    transform: translateX(-50%);
    z-index: auto;
    width: auto;
  }

  .card:hover .btn_anchor {
    transition: all 0.2s ease-in-out;
    opacity: 1;
    bottom: 5%;
  }
</style>


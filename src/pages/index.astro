    <script type="module">
      document.addEventListener("DOMContentLoaded", () => {
        const unlockedGames = JSON.parse(localStorage.getItem("unlockedGames") || "[]");

        document.querySelectorAll(".catalog__card").forEach(card => {
          const gameId = card.dataset.gameId;
          const gameIdAlt = card.dataset.gameIdalt;
          if (unlockedGames.includes(gameId)) {
            const anchor = card.querySelector("a");
            const button = card.querySelector("button");

            anchor.href = `/${gameIdAlt}`;
            button.textContent = "Detalles del juego";
          }
        });
      });
</script>
</MainLayout>

<style>
  /* SEMANTICS */
  body {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "header"
      "main"
      "footer";
    font-size: x-large;
  }

  /* CARDS */

  .main__catalog-div {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 1rem;
    justify-content: center;
  }

  .catalog__card {
    background: #111;
    border: 1px solid var(--primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    display: grid;
    grid-template-rows: auto auto;
    width: 250px;
    height: auto;
    overflow: hidden;
    justify-items: center;
    align-items: center;
    transform: scale(0.95);
  }

  .catalog__card:hover {
    transform: scale(1);
    transition: all 0.2s ease-in-out;
  }

  .catalog__image {
    border-radius: var(--radius) var(--radius) 0 0;
    width: 100%;
    height: auto;
    margin: 0;
  }

  .catalog__button, .catalog__score {
    margin: 5px;
    padding: 5px;
  }

  .catalog__image-container {
    position: relative;
  }

  .catalog__link {
    position: absolute;
    border: none;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    cursor: pointer;
    left: 50%;
    bottom: -5%;
    transform: translateX(-50%);
    z-index: auto;
    width: auto;
  }

  .catalog__card:hover .catalog__link {
    transition: all 0.2s ease-in-out;
    opacity: 1;
    bottom: 5%;
  }

  /* MENU */
  .header__menu-button {
    font-size: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--primary);
  }

  .header__nav {
    position: absolute;
    top: 120px;
    left: 0;
    width: 97%;
    background: var(--bg-color);
    padding: 1rem;
    display: none;
    flex-direction: column;
    z-index: 10;
    overflow-x: hidden;
    margin: 0;
  }

  .header__nav-list {
    list-style: none;
    padding: 0;
  }

  .header__nav-item {
    padding: 10px;
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const menu = document.querySelector(".header__nav") as HTMLElement;
  const toggleBtn = document.querySelector(".header__menu-button");

  toggleBtn.addEventListener("click", () => {
    if (menu.classList.contains("header__nav--hidden")) {
      menu.classList.remove("header__nav--hidden");
      menu.style.display = "block";
    } else {
      menu.classList.add("header__nav--hidden");
      menu.style.display = "none";
    }
  });
});
</script>

<style>
  /* SEMANTICS */
    body {
    margin: 0;
    background-color: var(--bg-color);
    color: var(--text);
    display: grid;
    grid-template-rows: auto 1fr auto; /* âœ… Esto lo organiza en filas */
    grid-template-areas:
      "header"
      "main"
      "footer"; /* âœ… Ajuste aquÃ­ */
    height: 100vh;
    font-size: x-large;
  }


  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: oklch(0.21 0.1209 279.86);
    box-shadow: var(--shadow);
    grid-area: header;
  }

  footer {
    grid-area: footer;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    background-color: oklch(0.21 0.1209 279.86);
    box-shadow: var(--shadow);
    flex-direction: column;
  }

  section {
    border: 1px solid var(--primary);
    padding: 1rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    margin: 1rem;
    background-color: oklch(0.21 0.1209 279.86);
  }

  /* CARDS */

  img {
    max-width: 100%;
    height: auto;
  }

  .card_container {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 1rem;
    justify-content: center;
  }

  .card {
    background: #111;
    border: 1px solid var(--primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    display: grid;
    grid-template-rows: auto auto;
    width: 250px;
    height: auto;
    overflow: hidden;
    justify-items: center;
    align-items: center;
    transform: scale(0.95);
  }

  .card:hover {
    transform: scale(1);
    transition: all 0.2s ease-in-out;
  }

  .card img {
    border-radius: var(--radius) var(--radius) 0 0;
    width: 100%;
    height: auto;
    margin: 0;
  }

  .card_item {
    margin: 5px;
    padding: 5px;
  }

  .card div {
    position: relative;
  }

  .card .btn_anchor {
    position: absolute;
    border: none;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
    cursor: pointer;
    left: 50%;
    bottom: -5%;
    transform: translateX(-50%);
    z-index: auto;
    width: auto;
  }

  .card:hover .btn_anchor {
    transition: all 0.2s ease-in-out;
    opacity: 1;
    bottom: 5%;
  }

  /* MENU */
  .menu-button {
  font-size: 2rem;
  background: none;
  border: none;
  cursor: pointer;
}

#mobile-menu {
  position: absolute;
  top: 120px;
  left: 0;
  width: 100%;
  background: var(--bg-color);
  padding: 1rem;
  display: none;
  flex-direction: column;
  z-index: 10;
}

#mobile-menu ul {
  list-style: none;
  padding: 0;
}

#mobile-menu li {
  padding: 10px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const menu = document.getElementById("mobile-menu");
  const toggleBtn = document.getElementById("menu-toggle");

  toggleBtn.addEventListener("click", () => {
    if (menu.classList.contains("hidden")) {
      menu.classList.remove("hidden");
      menu.style.display = "block";
    } else {
      menu.classList.add("hidden");
      menu.style.display = "none";
    }
  });
});
</script>